{
  "id": "vss-domain-flow-category",
  "title": "Flows per Domain per category",
  "service": "elasticsearch",
  "query": {
    "index": "{{index:nuage_flow}}",
    "type": "{{type:nuage_doc_type}}",
    "body": {
      "size": 0,
      "query": {
        "bool": {
          "should": [
            {
              "bool": {
                "must": [
                  {
                    "range": {
                      "timestamp": {
                        "gte": "{{startTime:now-24h}}",
                        "lte": "{{endTime:now}}",
                        "format": "epoch_millis"
                      }
                    }
                  },
                  {
                    "term": {
                      "nuage_metadata.enterpriseName": "{{enterpriseName:chord_enterprise}}"
                    }
                  },
                  {
                    "term": {
                      "{{domainType:nuage_metadata.domainName}}": "{{domainName:chord_domain}}"
                    }
                  }
                ]
              }
            },
            {
              "nested": {
                "path": "{{source_field:nuage_metadata.src-pgmem-info}}",
                "score_mode": "none",
                "query": {
                  "bool": {
                    "must": [
                      { "replace": "optional-src-pg-categories" }
                    ]
                  }
                }
              }
            },
            {
              "nested": {
                "path": "{{destination_field:nuage_metadata.dst-pgmem-info}}",
                "score_mode": "none",
                "query": {
                  "bool": {
                    "must": [
                      { "replace": "optional-dst-pg-categories"}
                    ]
                  }
                }
              }
            }
          ]
        }
      },
      "aggs": {
        "hash": {
          "terms": {
            "field": "nuage_metadata.flowid",
            "size": 10,
            "order": {
              "SumOf": "desc"
            }
          },
          "aggs": {
            "SumOf": {
              "sum": {
                "field": "packets"
              }
            },
            "a": {
              "nested": {
                "path": "{{source_field:nuage_metadata.src-pgmem-info}}"
              },
              "aggs": {
                "a2": {
                  "terms": {
                    "field": "{{source_field:nuage_metadata.src-pgmem-info}}.category",
                    "include":"{{category_field:*}}"
                  },
                  "aggs": {
                    "source": {
                      "terms": {
                        "field": "{{source_field:nuage_metadata.src-pgmem-info}}.name",
                        "size": 10,
                        "order": {
                          "SumOf": "desc"
                        }
                      },
                      "aggs": {
                        "SumOf": {
                          "sum": {
                            "field": "packets"
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "b": {
              "nested": {
                "path": "{{destination_field:nuage_metadata.dst-pgmem-info}}"
              },
              "aggs": {
                "b2": {
                  "terms": {
                    "field": "{{destination_field:nuage_metadata.dst-pgmem-info}}.category",
                    "include":"{{category_field:*}}"
                  },
                  "aggs": {
                    "destination": {
                      "terms": {
                        "field": "{{destination_field:nuage_metadata.dst-pgmem-info}}.name",
                        "size": 10,
                        "order": {
                          "SumOf": "desc"
                        }
                      },
                      "aggs": {
                        "SumOf": {
                          "sum": {
                            "field": "packets"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
