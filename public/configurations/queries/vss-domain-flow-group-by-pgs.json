{
  "id": "vss-domain-flow-group-by-pgs",
  "title": "Flows per Domain per PG",
  "service": "elasticsearch",
  "query": {
    "index": "{{index:nuage_flow}}",
    "type": "{{type:nuage_doc_type}}",
    "body": {
      "size": 0,
      "query": {
        "bool": {
          "should": [
            {
              "bool": {
                "must": [
                  {
                    "range": {
                      "timestamp": {
                        "gte": "{{startTime:now-24h}}",
                        "lte": "{{endTime:now}}",
                        "format": "epoch_millis"
                      }
                    }
                  },
                  {
                    "term": {
                      "nuage_metadata.enterpriseName": "{{enterpriseName:chord_enterprise}}"
                    }
                  },
                  {
                    "term": {
                      "{{domainType:nuage_metadata.domainName}}": "{{domainName:chord_domain}}"
                    }
                  }
                ]
              }
            },
            {
              "nested": {
                "path": "{{source_field:nuage_metadata.src-pgmem-info}}",
                "score_mode": "none",
                "query": {
                  "bool": {
                    "must": [
                      
                    ]
                  }
                }
              }
            },
            {
              "nested": {
                "path": "{{destination_field:nuage_metadata.dst-pgmem-info}}",
                "score_mode": "none",
                "query": {
                  "bool": {
                    "must": [
                      
                    ]
                  }
                }
              }
            }
          ]
        }
      },
      "aggs": {
        "hash": {
          "terms": {
            "field": "nuage_metadata.flowid",
            "size": 10,
            "order": {
              "SumOf": "desc"
            }
          },
          "aggs": {
            "SumOf": {
              "sum": {
                "field": "packets"
              }
            },
            "source": {
              "nested": {
                "path": "{{source_field:nuage_metadata.src-pgmem-info}}"
              },
              "aggs": {
                "source": {
                  "terms": {
                    "field": "{{source_field:nuage_metadata.src-pgmem-info}}.name",
                    "size": 10,
                    "order": {
                      "rev_nest": "desc"
                    }
                  },
                  "aggs": {
                    "rev_nest": {
                      "reverse_nested": {},
                      "aggs": {
                        "SumOf": {
                          "sum": {
                            "field": "packets"
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "destination": {
              "nested": {
                "path": "{{destination_field:nuage_metadata.dst-pgmem-info}}"
              },
              "aggs": {
                "destination": {
                  "terms": {
                    "field": "{{destination_field:nuage_metadata.dst-pgmem-info}}.name",
                    "size": 10,
                    "order": {
                      "rev_nest": "desc"
                    }
                  },
                  "aggs": {
                    "rev_nest": {
                      "reverse_nested": {},
                      "aggs": {
                        "SumOf": {
                          "sum": {
                            "field": "packets"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}